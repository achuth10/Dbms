<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CropView">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/CropNameTxt"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/CropNameTxt"
        android:textSize="20dp"
        android:layout_margin="15dp"
        android:id="@+id/ClimateTxt"/>





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ClimateTxt"
        android:textSize="20dp"
        android:layout_margin="15dp"
        android:id="@+id/PhTxt"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/PhTxt"
        android:id="@+id/RainfallTxt"
        android:layout_margin="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PollinationTxt"
        android:layout_below="@id/RainfallTxt"
        android:layout_margin="15dp"
        android:layout_centerHorizontal="true"/>





</RelativeLayout>