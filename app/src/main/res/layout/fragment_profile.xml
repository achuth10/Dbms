<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Profile">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="232dp"
        android:layout_height="165dp"
        android:layout_marginHorizontal="75dp"
        android:layout_marginVertical="23dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="155dp"
        android:layout_marginVertical="195dp"
        android:text="Name" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="230dp"
        android:text="Location : "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="160dp"
        android:layout_marginVertical="235dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="60dp"
    android:layout_marginVertical="270dp"
    android:text="Average Temperature : "
    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
    android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="310dp"
        android:text="Current Crop(s) : "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="89dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="220dp"
        android:layout_marginVertical="315dp"
        android:text="TextView "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginVertical="350dp"
        android:text="Rainfall :  "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginHorizontal="150dp"
        android:layout_marginVertical="355dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="91dp"
        android:layout_height="22dp"
        android:layout_marginHorizontal="275dp"
        android:layout_marginVertical="275dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="55dp"
        android:layout_height="59dp"
        android:layout_marginHorizontal="345dp"
        android:layout_marginVertical="475dp"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add" />

</FrameLayout>