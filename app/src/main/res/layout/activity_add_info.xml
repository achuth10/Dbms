<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddInfo">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:text="Add info"
    android:textColor="#000000"
    android:textSize="20sp"
    android:layout_margin="10dp"
    android:id="@+id/AddinfoTxt"/>
<EditText
    android:layout_width="300dp"
    android:layout_margin="20dp"
    android:layout_below="@id/AddinfoTxt"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:hint="Enter location"
    android:id="@+id/LocationEdit"/>


    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:layout_below="@id/LocationEdit"
        android:hint="Enter rainfall in cm"
        android:id="@+id/RainfallEdit"/>


    <EditText
        android:layout_width="300dp"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:layout_below="@id/RainfallEdit"
        android:hint="Enter average Temperature "
        android:id="@+id/TempEdit"/>

    <EditText
        android:layout_width="300dp"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/TempEdit"
        android:inputType="number"
        android:hint="Enter ph level of soil "
        android:id="@+id/PhEdit"/>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddCropProgress"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_below="@id/UpdateBtn"
    android:layout_margin="20dp"
    android:layout_centerHorizontal="true"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Add crops"
    android:textSize="15sp"
    android:textColor="#000000"
    android:layout_margin="20dp"
    android:layout_centerHorizontal="true"
    android:id="@+id/AddCroptext"/>
    <Spinner
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/AddCroptext"
        android:id="@+id/AddCropSpinner"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/AddEachCropBtn"
        android:layout_below="@id/AddCroptext"
        android:layout_toRightOf="@id/AddCropSpinner"
        android:text="Add crop" />
</RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UpdateBtn"
        android:text="Add info"
        android:layout_margin="20dp"
        android:layout_below="@id/PhEdit"

        android:layout_centerHorizontal="true"/>
</RelativeLayout>